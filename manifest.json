{
    "manifest_version": 3,
    "name": "Auto Block Tab",
    "version": "1.0",
    "description": "Automatically block all tabs other than current",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon-off.png",
            "32": "icons/icon-off.png",
            "48": "icons/icon-off.png",
            "128": "icons/icon-off.png"
        },
        "default_title": "Click to toggle"
    },
    "permissions": [
        "tabs",
        "storage",
        "action"
    ]
}